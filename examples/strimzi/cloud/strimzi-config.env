# Strimzi Kafka Cloud Configuration - Kafka 4.1.1
# Source this file before applying the manifests:
#   source strimzi-config.env

# Kubernetes Settings
export KAFKA_NAMESPACE=kafka
export STRIMZI_CLUSTER_NAME=axonops-kafka

# Kafka Version and Image
export KAFKA_VERSION=4.1.1
export KAFKA_CONTAINER_IMAGE=ghcr.io/axonops/strimzi/kafka:0.50.0-4.1.1-2.0.18-0.1.9

# Broker Pool Configuration
export STRIMZI_BROKER_REPLICAS=6
export STRIMZI_BROKER_STORAGE_SIZE=10Gi
export STRIMZI_BROKER_STORAGE_CLASS=""

export STRIMZI_CONTROLLER_REPLICAS=3
export STRIMZI_CONTROLLER_STORAGE_SIZE=10Gi
export STRIMZI_CONTROLLER_STORAGE_CLASS=""

# AxonOps Agent Configuration (for Secret)
# Kubernetes Settings
export KAFKA_NAMESPACE=kafka
export STRIMZI_CLUSTER_NAME=example

export AXON_AGENT_CLUSTER_NAME=$STRIMZI_CLUSTER_NAME
export AXON_AGENT_ORG=example
export AXON_AGENT_KEY=CHANGEME
# Set this to your local AxonOps Server hostname if using on-prem,
# or to agents.axonops.cloud if connecting to AxonOps SaaS.
export AXON_AGENT_SERVER_HOST=agents.axonops.cloud
# If connecting to AxonOps SaaS, set the port to 443. For on-prem AxonOps Server with default configuration, set to 1888.
export AXON_AGENT_SERVER_PORT=443
# Set this to TLS if your AxonOps Server is configured for secure communication or
# if you are connecting to AxonOps SaaS. For on-prem AxonOps Server with no TLS, set to "disabled".
export AXON_AGENT_TLS_MODE=TLS
