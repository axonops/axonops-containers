# Strimzi Kafka Cloud Configuration - Kafka 4.1.1
# Source this file before applying the manifests:
#   source strimzi-config.env
#
# These values are used to create the axonops-agent secret.
# Create the secret with:
#   kubectl create secret generic axonops-agent -n kafka \
#     --from-literal=AXON_AGENT_CLUSTER_NAME=$AXON_AGENT_CLUSTER_NAME \
#     --from-literal=AXON_AGENT_ORG=$AXON_AGENT_ORG \
#     --from-literal=AXON_AGENT_SERVER_HOST=$AXON_AGENT_SERVER_HOST \
#     --from-literal=AXON_AGENT_KEY=$AXON_AGENT_KEY

# Kafka Version
export KAFKA_VERSION=4.1.1

# Strimzi Cluster Settings (hardcoded in manifests)
# Cluster name: axonops-kafka
# Namespace: kafka
# Brokers: 6 replicas, 20Gi storage
# Controllers: 3 replicas, 5Gi storage

# AxonOps Agent Configuration (for Secret)
export AXON_AGENT_CLUSTER_NAME=kafka
export AXON_AGENT_ORG=example
export AXON_AGENT_SERVER_HOST=agents.axonops.cloud
export AXON_AGENT_KEY=CHANGEME
# Set this to TLS if your AxonOps Server is configured for secure communication or
# if you are connecting to AxonOps SaaS. For on-prem AxonOps Server with no TLS, set to "disabled".
export AXON_AGENT_TLS_MODE=TLS
