# Strimzi Kafka Configuration - Kafka 4.1.1
# Source this file before applying the manifests:
#   source strimzi-config.env
set -a
# Strimzi Cluster Settings
STRIMZI_NAMESPACE=kafka
STRIMZI_CLUSTER_NAME=my-cluster

# Kafka Version
KAFKA_VERSION=4.1.1

# Broker Pool Configuration
STRIMZI_BROKER_REPLICAS=3
STRIMZI_BROKER_STORAGE_SIZE=10Gi

# Controller Pool Configuration (KRaft)
STRIMZI_CONTROLLER_REPLICAS=3
STRIMZI_CONTROLLER_STORAGE_SIZE=5Gi

# AxonOps Agent Configuration
AXON_AGENT_CLUSTER_NAME=my-cluster
AXON_AGENT_ORG=my-org
AXON_AGENT_TLS_MODE=none
AXON_AGENT_SERVER_HOST=axon-server.axonops.svc.cluster.local
AXON_AGENT_SERVER_PORT=1888
set +a