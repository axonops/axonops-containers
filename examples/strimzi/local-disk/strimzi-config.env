# Strimzi Kafka Configuration - Kafka 4.1.1
# Source this file before applying the manifests:
#   source strimzi-config.env

# Strimzi Cluster Settings
export STRIMZI_NAMESPACE=kafka
export STRIMZI_CLUSTER_NAME=my-cluster

# Kafka Version
export KAFKA_VERSION=4.1.1

# Broker Pool Configuration
export STRIMZI_BROKER_REPLICAS=3
export STRIMZI_BROKER_STORAGE_SIZE=10Gi

# Controller Pool Configuration (KRaft)
export STRIMZI_CONTROLLER_REPLICAS=3
export STRIMZI_CONTROLLER_STORAGE_SIZE=5Gi

# AxonOps Agent Configuration
export AXON_AGENT_CLUSTER_NAME=my-cluster
export AXON_AGENT_ORG=my-org
export AXON_AGENT_TLS_MODE=none
export AXON_AGENT_SERVER_HOST=axon-server.axonops.svc.cluster.local
export AXON_AGENT_SERVER_PORT=1888
