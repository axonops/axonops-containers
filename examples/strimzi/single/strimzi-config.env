# Strimzi Kafka Single Node Configuration - Kafka 4.1.1
# Source this file before applying the manifests:
#   source strimzi-config.env

# Kafka Version
export KAFKA_VERSION=4.1.1

# Strimzi Cluster Settings
export STRIMZI_CLUSTER_NAME=axonops-kafka

# Single Node Configuration (dual-role: controller + broker)
# Replicas: 1
# Storage: 100Gi

# AxonOps Agent Configuration (update in axonops-agent-config.yaml)
# These are placeholders - update the ConfigMap directly
export AXON_AGENT_CLUSTER_NAME=YOUR_CLUSTER_NAME
export AXON_AGENT_ORG=YOUR_ORG_NAME
export AXON_AGENT_SERVER_HOST=YOUR_AXONOPS_HOST
export AXON_AGENT_KEY=YOUR_AXONOPS_API_KEY
export AXON_AGENT_DATACENTER=testdc
