# K8ssandra Cassandra Configuration
# Source this file before applying the manifests:
#   export $(grep -v '^#' k8ssandra-config.env | xargs)

# Cassandra Version
CASSANDRA_VERSION=5.0.6

# AxonOps Container Image
IMAGE_NAME=ghcr.io/axonops/cassandra:5.0.6

# Cluster Configuration
K8SSANDRA_CLUSTER_NAME=axonops-k8ssandra-5
K8SSANDRA_NAMESPACE=k8ssandra-operator
CASSANDRA_DC_NAME=dc1
CASSANDRA_DC_SIZE=3

# Storage Configuration
STORAGE_CLASS=local-path
STORAGE_SIZE=2Gi

# Resource Configuration
CPU_LIMIT=1
CPU_REQUEST=1
MEMORY_LIMIT=2Gi
MEMORY_REQUEST=1Gi
HEAP_SIZE=1G

# AxonOps Agent Configuration
AXON_AGENT_KEY=KEY-GOES-HERE
AXON_AGENT_ORG=ORG-GOES-HERE
AXON_AGENT_SERVER_HOST=agents.axonops.cloud
AXON_AGENT_SERVER_PORT=443
