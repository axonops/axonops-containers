# Strimzi Kafka Setup Configuration
# Source this file before running strimzi-setup.sh:
#   source strimzi-setup.env && ./strimzi-setup.sh
# Or:
#   export $(grep -v '^#' strimzi-setup.env | xargs) && ./strimzi-setup.sh
set +a
# Kafka Version and Strimzi Operator
STRIMZI_OPERATOR_VERSION=0.49.1

# Namespaces
NS_STRIMZI_OPERATOR=strimzi
NS_KAFKA=kafka

# Cluster Configuration
STRIMZI_CLUSTER_NAME=my-cluster
STRIMZI_NODE_HOSTNAME=your-node-name

# Replica Configuration
STRIMZI_CONTROLLER_REPLICAS=2
STRIMZI_BROKER_REPLICAS=3
KAFKA_CONTROLLER_REPLICAS=3
KAFKA_BROKER_REPLICAS=3

# Storage Configuration
# Options: 'hostPath' (local directories) or 'pvc' (dynamic provisioning)
STORAGE_MODE=hostPath
STORAGE_CLASS=
STORAGE_SIZE=10Gi

# hostPath Storage Settings (when STORAGE_MODE=hostPath)
STRIMZI_HOST_BASE_DIR=/data/strimzi
STRIMZI_HOST_UID=1001
STRIMZI_HOST_GID=1001
STRIMZI_HOST_PERMS=755

# Node Selector Configuration (optional)
# Format: "replica-id:node-name,replica-id:node-name,..."
# Example: "broker-0:worker-1,broker-1:worker-2,broker-2:worker-3"
KAFKA_BROKER_NODE_SELECTORS=
KAFKA_CONTROLLER_NODE_SELECTORS=

# AxonOps Agent Configuration
AXON_AGENT_CLUSTER_NAME=my-cluster
AXON_AGENT_ORG=your-org
AXON_AGENT_TLS_MODE=false
AXON_AGENT_SERVER_HOST=axon-server-agent.axonops.svc.cluster.local
AXON_AGENT_SERVER_PORT=1888
set -a