# Strimzi Kafka Setup Configuration
# Source this file before running strimzi-setup.sh:
#   source strimzi-setup.env && ./strimzi-setup.sh
# Or:
#   export $(grep -v '^#' strimzi-setup.env | xargs) && ./strimzi-setup.sh

# Kafka Version and Strimzi Operator
export STRIMZI_OPERATOR_VERSION=0.50.0

# Namespaces
export NS_STRIMZI_OPERATOR=strimzi
export NS_KAFKA=kafka

# Cluster Configuration
export STRIMZI_CLUSTER_NAME=my-cluster
export STRIMZI_NODE_HOSTNAME=your-node-name

# Replica Configuration
export STRIMZI_CONTROLLER_REPLICAS=2
export STRIMZI_BROKER_REPLICAS=3
export KAFKA_CONTROLLER_REPLICAS=3
export KAFKA_BROKER_REPLICAS=3

# Storage Configuration
# Options: 'hostPath' (local directories) or 'pvc' (dynamic provisioning)
export STORAGE_MODE=hostPath
export STORAGE_CLASS=
export STORAGE_SIZE=10Gi

# hostPath Storage Settings (when STORAGE_MODE=hostPath)
export STRIMZI_HOST_BASE_DIR=/data/strimzi
export STRIMZI_HOST_UID=1001
export STRIMZI_HOST_GID=1001
export STRIMZI_HOST_PERMS=755

# Node Selector Configuration (optional)
# Format: "replica-id:node-name,replica-id:node-name,..."
# Example: "broker-0:worker-1,broker-1:worker-2,broker-2:worker-3"
export KAFKA_BROKER_NODE_SELECTORS=
export KAFKA_CONTROLLER_NODE_SELECTORS=

# AxonOps Agent Configuration
export AXON_AGENT_CLUSTER_NAME=my-cluster
export AXON_AGENT_ORG=your-org
# Set this to TLS if your AxonOps Server is configured for secure communication or
# if you are connecting to AxonOps SaaS. For on-prem AxonOps Server with no TLS, set to "disabled".
export AXON_AGENT_TLS_MODE=disabled
export AXON_AGENT_SERVER_HOST=axon-server-agent.axonops.svc.cluster.local
export AXON_AGENT_SERVER_PORT=1888
